# Pasabayan AI Chat - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# MCP Server Configuration
# ============================================

# Pasabayan API URL (your Laravel backend)
PASABAYAN_API_URL=https://api.pasabayan.com

# Admin API token for full platform access
# Create this in Pasabayan admin panel or use an existing admin user token
PASABAYAN_ADMIN_TOKEN=your-admin-api-token

# Internal token for MCP server authentication (generate a random string)
MCP_ACCESS_TOKEN=your-mcp-access-token

# MCP Server URL (for chat-backend to connect to mcp-server)
MCP_SERVER_URL=http://localhost:3002

# ============================================
# Chat Backend Configuration
# ============================================

# Anthropic API key for Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxx

# Admin token for web UI access
# Users enter this token to get admin mode in the chat UI
ADMIN_API_TOKEN=your-admin-ui-token

# Frontend URL for CORS
FRONTEND_URL=https://ask.pasabayan.com

# ============================================
# Chat Frontend Configuration
# ============================================

# API URL (public, used by browser)
NEXT_PUBLIC_API_URL=https://ask.pasabayan.com/api

# ============================================
# Docker Configuration (Production)
# ============================================

# Docker registry for images
DOCKER_REGISTRY=ghcr.io/your-org

# Version tag for images
VERSION=latest

# ============================================
# SSL Configuration (Production)
# ============================================

# Domain for SSL certificate
DOMAIN=ask.pasabayan.com

# Email for Let's Encrypt notifications
SSL_EMAIL=admin@pasabayan.com

# ============================================
# Development Configuration
# ============================================

# Node environment
NODE_ENV=development

# Service ports (for local development)
MCP_SERVER_PORT=3002
CHAT_BACKEND_PORT=3001
CHAT_FRONTEND_PORT=3000

# ============================================
# Optional: Rate Limiting
# ============================================

# Requests per minute for admin users
ADMIN_RATE_LIMIT=100

# Requests per minute for regular users
USER_RATE_LIMIT=30

# ============================================
# Optional: Logging
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true
